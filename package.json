{
	"name": "@metreeca/tile",
	"version": "0.0.4",
	"description": "A lightweight Preact toolkit for rapid REST/JSON-LD frontend development",
	"keywords": [
		"preact",
		"rest-api",
		"json-ld"
	],
	"homepage": "https://github.com/metreeca/tile#readme",
	"repository": "github:metreeca/tile",
	"bugs": {
		"url": "https://github.com/metreeca/tile/issues",
		"email": "help@metreeca.com"
	},
	"license": "Apache-2.0",
	"author": {
		"name": "Metreeca",
		"email": "info@metreeca.com",
		"url": "https://www.metreeca.com"
	},
	"main": "index.js",
	"types": "index.d.ts",
	"scripts": {
		"start": "vite --open",
		"clean": "rm -rf dist docs node_modules",
		"build": "rm -rf dist && tsc && copyfiles package.json LICENSE README.md dist && copyup 'code/**/*.css' dist",
		"issue": "npm run build && npm publish --access public ./dist",
		"share": "npm run build && cd dist && npm link"
	},
	"peerDependencies": {
		"lucide-preact": "^0.15.10-beta.3",
		"preact": "^10.5.13"
	},
	"devDependencies": {
		"@preact/preset-vite": "^2.1.0",
		"copyfiles": "^2.4.1",
		"postcss-nesting": "^7.0.1",
		"typescript": "^4.2.3",
		"vite": "^2.2.1"
	}
}
